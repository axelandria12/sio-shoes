{% extends 'base.html.twig' %}

{% block title %}SubCategory{% endblock %}

{% block body %}
<div class ="container">
    <h1>Sous-catégorie</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sub_category.id }}</td>
            </tr>
            <tr>
                <th>Sous-catégorie</th>
                <td>{{ sub_category.name }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ sub_category.category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">Modifier</a>
    <br><br>
    {{ include('sub_category/_delete_form.html.twig') }}
    <br>
    <a class="btn btn-dark" href="{{ path('app_sub_category_index') }}">Retour</a>
    </div>
{% endblock %}
